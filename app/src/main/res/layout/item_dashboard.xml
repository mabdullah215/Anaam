<?xml version="1.0" encoding="utf-8"?>
<com.app.anaamapp.utils.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/_10sdp"
    android:layout_margin="@dimen/_10sdp"
    android:background="@drawable/dashboard_corner"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:id="@+id/img_src"
        android:layout_height="@dimen/_30sdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/tv_round_label"
        android:minWidth="@dimen/_25sdp"
        android:padding="@dimen/_5sdp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/dashboard_corner"
        android:backgroundTint="#333333"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        android:textSize="18sp"
        android:fontFamily="@font/sf_pro_text_bold"
        android:id="@+id/tv_heading"
        android:textColor="#333333"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:textSize="12sp"
        android:fontFamily="@font/sf_pro_text_regular"
        android:layout_below="@+id/tv_heading"
        android:id="@+id/tv_sub_heading"
        android:textColor="#333333"
        android:layout_height="wrap_content"/>


</com.app.anaamapp.utils.SquareRelativeLayout>
