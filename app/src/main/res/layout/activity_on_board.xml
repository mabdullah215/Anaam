<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_marginTop="50dp"
    android:layout_height="match_parent"
    tools:context=".activities.OnBoardActivity">

    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/ic_group"
        android:adjustViewBounds="true"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_text_heavy"
        android:textStyle="normal"
        android:layout_margin="20dp"
        android:textSize="25sp"
        android:textColor="#333333"
        android:lineSpacingExtra="2.5sp"
        android:text="Hire the Best Service Providers for Any JobðŸ‘Œ" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_regular"
        android:textStyle="normal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="12sp"
        android:textColor="#333333"
        android:lineSpacingExtra="1.5sp"
        android:text="Millions of worker on thousands of jobs to Whatever your needs, there will be an expert to get it done." />

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginRight="10dp"
        android:text="Sign in"
        android:gravity="center"
        android:id="@+id/button_sign_in"
        android:textSize="15sp"
        android:background="@drawable/square_corner"
        android:layout_height="50dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="15sp"
            android:text="Get Started"
            android:id="@+id/button_started"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_200"
            android:layout_marginLeft="10dp"
            android:background="@drawable/square_corner"
            android:layout_height="50dp"/>

    </LinearLayout>

</LinearLayout>